<div class="container-fluid">
    <button class="mobile-menu-toggler" id="mobile_menu_toggler">
        <i class="fas fa-bars"></i>
    </button>

    <a href="/" class="logotype">
        <img src="{{ asset('build/images/icons/logo_366x79.svg') }}" alt="RankedChoice Logotype">
    </a>
    <nav class="main-nav">
        <ul class="menu">
            {% include 'main/_embed/_menu/_menu_item.html.twig' with {
                'targetRoute': 'main_category_show',
                'slug': 'jeans',
                'label': 'label.menu_jeans'
            } %}

            {% include 'main/_embed/_menu/_menu_item.html.twig' with {
                'targetRoute': 'main_category_show',
                'slug': 'hats',
                'label': 'label.menu_hats'
            } %}

            {% include 'main/_embed/_menu/_menu_item.html.twig' with {
                'targetRoute': 'main_category_show',
                'slug': 'jackets',
                'label': 'label.menu_jackets'
            } %}

            {% include 'main/_embed/_menu/_menu_item.html.twig' with {
                'targetRoute': 'main_category_show',
                'slug': 'dresses',
                'label': 'label.menu_dresses'
            } %}

            {% include 'main/_embed/_menu/_menu_item.html.twig' with {
                'targetRoute': 'main_category_show',
                'slug': 'sneakers',
                'label': 'label.menu_sneakers'
            } %}

            {% if app.user %}
                {% include 'main/_embed/_menu/_menu_item.html.twig' with {
                    'targetRoute': 'main_profile_index',
                    'label': 'label.menu_my_profile'
                } %}
            {% else %}
                <li class="menu-item font-weight-bold">
                    <a href="{{ path('main_login') }}">
                        <div>{{ 'label.menu_login'|trans }}</div>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>

    {{ include('main/_embed/_menu/_menu_cart.html.twig') }}

</div>
